{
  "name": "serverless-ts-template",
  "version": "1.1.0",
  "description": "A serverless framework template for typescript",
  "main": "serverless.ts",
  "type": "module",
  "private": true,
  "scripts": {
    "build": "tsc --build",
    "clean": "rm -rf .serverless .turbo dist node_modules",
    "deploy": "./scripts/deploy.sh",
    "dev": "serverless offline start --reloadHandler",
    "format": "prettier --write \"src/**/*.ts\"",
    "format:check": "prettier --check \"src/**/*.ts\"",
    "lint": "eslint .",
    "lint:fix": "eslint \"src/**/*.ts\" \"serverless.ts\" --fix",
    "offline": "serverless offline start --reloadHandler",
    "prepare": "command -v husky >/dev/null 2>&1 && husky || echo 'Husky not available, skipping'",
    "test": "vitest",
    "test:run": "vitest run",
    "test:coverage": "vitest run --coverage",
    "type-check": "tsc --noEmit"
  },
  "repository": {
    "type": "git",
    "url": "git+ssh://git@github.com/theDashpuntsag/serverless-ts-template.git"
  },
  "keywords": [
    "serverless",
    "template"
  ],
  "author": "thedashpuntsag",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/theDashpuntsag/serverless-ts-template/issues"
  },
  "packageManager": "pnpm@10.16.1",
  "homepage": "https://github.com/theDashpuntsag/serverless-ts-template#readme",
  "dependencies": {
    "@aws-sdk/client-dynamodb": "^3.940.0",
    "@aws-sdk/client-lambda": "^3.942.0",
    "@aws-sdk/client-ssm": "^3.940.0",
    "@aws-sdk/lib-dynamodb": "^3.940.0",
    "aws-lambda": "^1.0.7",
    "axios": "^1.13.2",
    "dotenv": "^17.2.3",
    "dynamo-command-builder": "^0.1.0",
    "winston": "^3.18.3",
    "zod": "^4.1.13"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.1",
    "@middy/core": "^4.7.0",
    "@middy/http-json-body-parser": "^4.7.0",
    "@serverless/eslint-config": "^5.1.0",
    "@serverless/typescript": "^4.23.0",
    "@types/aws-lambda": "^8.10.159",
    "@types/node": "^22.19.1",
    "eslint": "^9.39.1",
    "globals": "^15.15.0",
    "husky": "^9.1.7",
    "jiti": "^2.6.1",
    "prettier": "^3.7.3",
    "serverless": "^4.26.1",
    "serverless-offline": "^14.4.0",
    "serverless-prune-plugin": "^2.1.0",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.48.1",
    "vitest": "^3.2.4"
  }
}
